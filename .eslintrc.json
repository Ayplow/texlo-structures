{
  "extends": ["typescript"],
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "ecmaFeatures": {
      "modules": true,
      "jsx": true
    }
  },
  "plugins": [
    "typescript"
  ],
  "rules": {
    "valid-jsdoc": ["error", {
      "prefer": {
        "return": "return"
      },
      "requireReturn": false
    }],
    "require-jsdoc": [0, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true,
        "ArrowFunctionExpression": false,
        "FunctionExpression": true
      }
    }]
  }
}